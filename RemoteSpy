--------------------------------------------------------------------------------
-- KEYBOARD SHORTCUTS
--------------------------------------------------------------------------------
UserInputService.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    local ctrl = UserInputService:IsKeyDown(Enum.KeyCode.LeftControl)
             or  UserInputService:IsKeyDown(Enum.KeyCode.RightControl)

    -- Ctrl+A â€” select all visible entries
    if ctrl and input.KeyCode == Enum.KeyCode.A then
        clearMulti()
        for _, e in ipairs(spy.entries) do
            if e.btn and e.btn.Parent and e.btn.Visible then
                addMulti(e)
                e.btn.BackgroundColor3 = T.ENTRY_MULTI
            end
        end
        updateMultiBadge()
        setStatus("âš¡ Selected all " .. spy.multiCount .. " visible entries", T.BLUE)

    -- Ctrl+D â€” deselect all
    elseif ctrl and input.KeyCode == Enum.KeyCode.D then
        clearMulti()
        updateMultiBadge()
        setStatus("â”€â”€ Deselected all.", T.TEXT_DIM)

    -- Delete â€” block selected
    elseif input.KeyCode == Enum.KeyCode.Delete and spy.selected then
        local name = spy.selected.remote.Name
        spy.blocked[name] = true
        if spy.selected.btn and spy.selected.btn.Parent then
            spy.selected.btn:Destroy()
        end
        for i, e in ipairs(spy.entries) do
            if e == spy.selected then table.remove(spy.entries, i) break end
        end
        spy.selected = nil
        CodeBox.Text = ""
        setStatus("âŠ˜ Blocked (Delete): " .. name, T.ORANGE)
    end
end)

--------------------------------------------------------------------------------
-- DIVIDER DRAG (resize panels)
--------------------------------------------------------------------------------
local divDragging = false
local divDragStart = 0
local divStartW    = logPanelW

DivHandle.MouseButton1Down:Connect(function()
    divDragging  = true
    divDragStart = UserInputService:GetMouseLocation().X
    divStartW    = LogPanel.AbsoluteSize.X
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        divDragging = false
    end
end)

RunService.RenderStepped:Connect(function()
    if not divDragging then return end
    local mx  = UserInputService:GetMouseLocation().X
    local dx  = mx - divDragStart
    local newW = math.clamp(divStartW + dx, 250, WIN_W - 220)
    LogPanel.Size     = UDim2.new(0, newW, 1, 0)
    Divider.Position  = UDim2.fromOffset(newW, 0)
    CtrlPanel.Size    = UDim2.new(1, -(newW + 5), 1, 0)
    CtrlPanel.Position = UDim2.fromOffset(newW + 5, 0)
end)

--------------------------------------------------------------------------------
-- HOOK ENGINE
--------------------------------------------------------------------------------
local function hookRemote(obj)
    if not obj or not obj.Parent then return end
    if spy.hooked[obj] then return end

    if obj:IsA("RemoteEvent") then
        spy.hooked[obj] = true
        local ok, err = pcall(function()
            obj.OnClientEvent:Connect(function(...)
                if obj and obj.Parent then
                    addLog(obj, snap(...), "RemoteEvent")
                end
            end)
        end)
        if not ok then
            spy.hooked[obj] = nil
            warn("[RemoteSpy v5] RemoteEvent hook failed: "
                .. obj:GetFullName() .. " | " .. tostring(err))
        end

    elseif obj:IsA("RemoteFunction") then
        spy.hooked[obj] = true
        local ok, err = pcall(function()
            obj.OnClientInvoke = function(...)
                if obj and obj.Parent then
                    addLog(obj, snap(...), "RemoteFunction")
                end
            end
        end)
        if not ok then
            spy.hooked[obj] = nil
            warn("[RemoteSpy v5] RemoteFunction hook failed: "
                .. obj:GetFullName() .. " | " .. tostring(err))
        end
    end
end

-- Initial scan
local hookedCount = 0
for _, v in ipairs(game:GetDescendants()) do
    local wasHooked = not spy.hooked[v]
    hookRemote(v)
    if not wasHooked and spy.hooked[v] then hookedCount = hookedCount + 1 end
end
print(string.format("[RemoteSpy v5] Hooked %d existing remotes.", hookedCount))

-- Watch for new remotes
game.DescendantAdded:Connect(function(obj)
    task.defer(function()
        hookRemote(obj)
    end)
end)

-- Allow re-hook if remote moves in the hierarchy
game.DescendantRemoving:Connect(function(obj)
    if spy.hooked[obj] then
        spy.hooked[obj] = nil
    end
end)

--------------------------------------------------------------------------------
-- STARTUP
--------------------------------------------------------------------------------
setStatus("â—‰ Active â€” waiting for RemoteEvent / RemoteFunction calls.", T.GREEN)
print("[RemoteSpy v5.0] Ready.")
